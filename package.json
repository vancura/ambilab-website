{
  "name": "Ambilab Website",
  "version": "1.0.0",
  "description": "Marketing website and blog for Ambilab - a web-based pixel art game engine for kids",
  "type": "module",
  "scripts": {
    "dev": "astro dev --host",
    "build": "astro build",
    "preview": "astro preview",
    "check": "astro check",
    "story:dev": "histoire dev",
    "story:build": "histoire build",
    "story:preview": "histoire preview",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{ts,astro,svelte,json,md,mdx,css}\"",
    "typecheck": "tsc --noEmit",
    "prepare": "husky",
    "validate:security": "tsx src/scripts/validate-security-headers.ts",
    "validate:all": "npm run validate:security"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/cloudflare": "^12.0.0",
    "@astrojs/mdx": "^4.0.0",
    "@astrojs/rss": "^4.0.14",
    "@astrojs/sitemap": "^3.2.0",
    "@astrojs/svelte": "^7.0.0",
    "@iconify-json/solar": "^1.2.0",
    "astro": "^5.2.0",
    "astro-expressive-code": "^0.38.3",
    "astro-icon": "^1.1.1",
    "gsap": "^3.12.5",
    "nanostores": "^0.11.3",
    "remark-gfm": "^4.0.0",
    "remark-smartypants": "^3.0.2",
    "svelte": "^5.1.9",
    "tailwindcss": "^4.0.0"
  },
  "devDependencies": {
    "@histoire/plugin-svelte": "^0.17.17",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.1.18",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-svelte": "^2.46.1",
    "histoire": "^0.17.17",
    "prettier": "^3.3.3",
    "husky": "^9.1.7",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-svelte": "^3.2.8",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
