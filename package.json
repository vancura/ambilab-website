{
  "name": "ambilab-website",
  "version": "1.0.0",
  "type": "module",
  "description": "Marketing website and blog for Ambilab - a web-based pixel art game engine for kids",
  "author": "Václav Vančura",
  "repository": {
    "type": "git",
    "url": "https://github.com/vancura/ambilab-website.git"
  },
  "homepage": "https://ambilab.com",
  "bugs": {
    "url": "https://github.com/vancura/ambilab-website/issues"
  },
  "packageManager": "pnpm@10.26.2",
  "engines": {
    "node": ">=20.0.0"
  },
  "pnpm": {
    "overrides": {
      "vite-node": "^5.2.0",
      "esbuild": "^0.25.0"
    }
  },
  "dependencies": {
    "astro": "^5.16.11"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.6",
    "@astrojs/cloudflare": "^12.6.12",
    "@astrojs/mdx": "^4.3.13",
    "@astrojs/rss": "^4.0.15",
    "@astrojs/sitemap": "^3.7.0",
    "@astrojs/svelte": "^7.2.5",
    "@biomejs/biome": "^2.3.11",
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@lhci/cli": "^0.15.1",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.1.18",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "astro-expressive-code": "^0.41.6",
    "cspell": "^9.4.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-astro": "^1.5.0",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-svelte": "^3.14.0",
    "husky": "^9.1.7",
    "knip": "^5.82.1",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-svelte": "^3.4.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "remark-gfm": "^4.0.1",
    "remark-smartypants": "^3.0.2",
    "svelte": "^5.47.0",
    "tailwindcss": "^4.1.18",
    "tailwindcss-debug-screens": "^3.0.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^6.4.1",
    "wait-on": "^9.0.3",
    "wrangler": "^4.58.0"
  },
  "syncRules": {
    "source": "ai-rules",
    "targets": {
      "cursor": true,
      "webstorm": true,
      "zed": true,
      "claude": true
    }
  },
  "scripts": {
    "dev": "astro dev --host",
    "build": "astro build",
    "preview": "wrangler pages dev dist --port=4321",
    "check": "astro check",
    "lint": "biome lint . && eslint .",
    "lint:fix": "biome lint --write . && eslint . --fix",
    "format": "biome format --write . && eslint . --fix && prettier --write \"**/*.{astro,svelte,svg,md,mdx,yaml,yml}\"",
    "format:check": "biome format . && prettier --check \"**/*.{astro,svelte,svg,md,mdx,yaml,yml}\"",
    "format:biome": "biome format --write .",
    "format:prettier": "prettier --write \"**/*.{astro,svelte,svg,md,mdx,yaml,yml}\"",
    "typecheck": "tsc --noEmit && astro check",
    "spellcheck": "cspell \"**/*.{ts,tsx,js,md,mdx,astro,svelte}\" --no-progress",
    "knip": "knip",
    "knip:fix": "knip --fix",
    "preflight": "pnpm format:check && pnpm lint && pnpm typecheck && pnpm spellcheck && pnpm knip",
    "sync-rules": "node scripts/sync-rules.mjs",
    "prepare": "husky",
    "validate:security": "tsx src/scripts/validate-security-headers.ts",
    "validate": "pnpm validate:security",
    "security:audit": "pnpm audit --audit-level=moderate",
    "security:audit:fix": "pnpm audit --fix",
    "perf": "node scripts/run-lighthouse.mjs",
    "perf:collect": "lhci collect",
    "perf:assert": "lhci assert",
    "perf:upload": "lhci upload"
  }
}
