{
  "name": "website",
  "version": "1.0.0",
  "type": "module",
  "description": "A bilingual (English/Czech) marketing website and blog for Ambilab.",
  "author": "Ambilab",
  "repository": {
    "type": "git",
    "url": "https://github.com/ambilab/website.git"
  },
  "homepage": "https://ambilab.com",
  "bugs": {
    "url": "https://github.com/ambilab/website/issues"
  },
  "packageManager": "pnpm@10.26.2",
  "engines": {
    "node": ">=20.0.0"
  },
  "pnpm": {
    "overrides": {
      "vite-node": "^5.2.0",
      "esbuild": "^0.25.0",
      "wrangler": "^4.59.2",
      "fast-xml-parser": "^5.3.4"
    }
  },
  "dependencies": {
    "astro": "^5.17.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.6",
    "@astrojs/cloudflare": "^12.6.12",
    "@astrojs/mdx": "^4.3.13",
    "@astrojs/rss": "^4.0.15",
    "@astrojs/svelte": "^7.2.5",
    "@biomejs/biome": "^2.3.13",
    "@commitlint/cli": "^20.4.0",
    "@commitlint/config-conventional": "^20.4.0",
    "@lhci/cli": "^0.15.1",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.1.18",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/svelte": "^5.2.7",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitest/coverage-v8": "^3.0.5",
    "@vitest/ui": "^3.0.5",
    "astro-expressive-code": "^0.41.6",
    "cspell": "^9.6.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-astro": "^1.5.0",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-svelte": "^3.14.0",
    "happy-dom": "^20.4.0",
    "husky": "^9.1.7",
    "knip": "^5.82.1",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-svelte": "^3.4.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "remark-gfm": "^4.0.1",
    "remark-smartypants": "^3.0.2",
    "svelte": "^5.49.1",
    "tailwindcss": "^4.1.18",
    "tailwindcss-debug-screens": "^3.0.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^6.4.1",
    "vitest": "^3.0.5",
    "wait-on": "^9.0.3",
    "wrangler": "^4.61.1",
    "zod": "^4.3.6"
  },
  "syncRules": {
    "source": "ai-rules",
    "targets": {
      "cursor": true,
      "webstorm": true,
      "zed": true,
      "claude": true
    }
  },
  "scripts": {
    "dev": "astro dev --host",
    "build": "astro build",
    "preview": "wrangler pages dev dist --port=4321",
    "check": "astro check",
    "d": "pnpm dev",
    "b": "pnpm build",
    "t": "pnpm typecheck",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:run": "vitest run",
    "lint": "biome lint . && eslint .",
    "lint:fix": "biome lint --write . && eslint . --fix",
    "format": "biome format --write . && eslint . --fix && prettier --write \"**/*.{astro,svelte,svg,md,mdx,yaml,yml}\"",
    "format:check": "biome format . && prettier --check \"**/*.{astro,svelte,svg,md,mdx,yaml,yml}\"",
    "format:biome": "biome format --write .",
    "format:prettier": "prettier --write \"**/*.{astro,svelte,svg,md,mdx,yaml,yml}\"",
    "typecheck": "astro check",
    "spellcheck": "cspell \"**/*.{ts,tsx,js,md,mdx,astro,svelte}\" --no-progress",
    "knip": "knip",
    "knip:fix": "knip --fix",
    "preflight": "pnpm format:check && pnpm lint && pnpm typecheck && pnpm test:run && pnpm spellcheck && pnpm knip",
    "sync-rules": "node scripts/sync-rules.mjs",
    "prepare": "husky",
    "validate:security": "tsx src/scripts/validate-security-headers.ts",
    "validate:env": "tsx src/scripts/validate-env.ts",
    "validate:content": "node scripts/validate-content.mjs",
    "validate": "pnpm validate:security && pnpm validate:env && pnpm validate:content",
    "security:audit": "pnpm audit --audit-level=moderate",
    "security:audit:fix": "pnpm audit --fix",
    "perf": "node scripts/run-lighthouse.mjs",
    "perf:collect": "lhci collect",
    "perf:assert": "lhci assert",
    "perf:upload": "lhci upload",
    "clean": "node scripts/clean.mjs",
    "clean:all": "node scripts/clean.mjs --all",
    "fix:all": "pnpm format && pnpm lint:fix && pnpm knip:fix",
    "check:quick": "pnpm format:check && pnpm lint",
    "validate:all": "pnpm preflight && pnpm validate && pnpm security:audit",
    "review:full": "pnpm preflight && pnpm build && pnpm security:audit"
  }
}
