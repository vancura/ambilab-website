{
  "editor.formatOnSave": true,
  "editor.defaultFormatter": null,

  // Disable built-in formatters to avoid conflicts with Prettier.
  "html.format.enable": false,

  // Associate SVG files with HTML for proper Prettier formatting.
  "files.associations": {
    "*.svg": "html"
  },

  // Prettier configuration.
  "prettier.enable": true,
  "prettier.requireConfig": false,

  // Biome for TypeScript/JavaScript/JSON/CSS.
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[css]": {
    "editor.defaultFormatter": "biomejs.biome"
  },

  // Prettier for Astro/HTML/SVG/Markdown/YAML.
  "[astro]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[svg]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[mdx]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // Svelte - use Svelte extension formatter.
  "[svelte]": {
    "editor.defaultFormatter": "svelte.svelte-vscode"
  },

  // ESLint auto-fix on save.
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "never"
  },

  // Biome as ESLint alternative for some checks.
  "biome.enabled": true
}
