---
import HeaderNav from '@components/astro/HeaderNav.astro';
import LocaleSwitcher from '@components/svelte/LocaleSwitcher.svelte';
import ThemeSwitcher from '@components/svelte/ThemeSwitcher.svelte';
import type { Locale } from '@type/locale';

export interface Props {
    locale: Locale;
    currentPath: string;
    translationPath?: string;
}

const { locale, currentPath, translationPath } = Astro.props as Props;
---

<header
    class="border-border-default dark:border-border-default-dark bg-page-bg dark:bg-page-bg-dark relative sticky top-0 z-10 select-none border-b"
>
    <nav class="container mx-auto flex max-w-4xl items-center justify-center gap-12 px-4 py-4">
        <a href="/" class="flex items-center gap-2 text-xl font-bold">
            <span>Ambilab</span>
        </a>

        <div class="flex items-center text-sm">
            <HeaderNav locale={locale} currentPath={currentPath} />
        </div>
    </nav>

    <div class="absolute right-4 top-1/2 flex -translate-y-1/2 items-center gap-2 text-sm">
        <ThemeSwitcher client:load />

        <LocaleSwitcher client:load currentLocale={locale} {...translationPath ? { translationPath } : {}} />
    </div>
</header>
