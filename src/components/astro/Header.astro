        background-image: url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAANAAAABAAQMAAABRDGt0AAAABlBMVEUYGBvk5Oc3/QyrAAAAUUlEQVR4Ae3JgQUEAQxE0XSQ/rucDt4xnK0gWHbEF958e91YMmRjZoXc0JYMSgQ3JLY3zbZXNEqklL5H5E9KBMc0D80VjRKNtNeUh3JD3160HzGR9HSxWI1mAAAAAElFTkSuQmCC');
