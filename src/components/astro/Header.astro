---
/**
 * Header Component
 *
 * Site header with logo, navigation menu, theme switcher, and locale switcher.
 *
 * Sticky header that remains visible while scrolling.
 *
 * Includes responsive layout and accessibility features.
 *
 * Features:
 * - Sticky positioning at the top of the page
 * - Logo/brand link with Vancura-style typography
 * - Mobile hamburger menu with slide-down navigation
 * - Desktop horizontal navigation
 * - Theme switcher (light/dark mode)
 * - Locale switcher (English/Czech)
 * - Active navigation highlighting
 * - Translation path support for locale switching
 *
 * @component
 * @example
 * ```astro
 * <Header
 *   locale="en"
 *   currentPath="/blog"
 *   translationPath="/cs/blog"
 * />
 * ```
 */
import HeaderNav from '@components/astro/HeaderNav.astro';
import LocaleSwitcher from '@components/svelte/LocaleSwitcher.svelte';
import MobileMenu from '@components/svelte/MobileMenu.svelte';
import ThemeSwitcher from '@components/svelte/ThemeSwitcher.svelte';
import { getRoute } from '@config/routes';
import type { Locale } from '@type/locale';

/**
 * Props for the Header component.
 */
export interface Props {
    /** The locale for the header navigation and translations. */
    locale: Locale;

    /** The current page path used to highlight the active navigation item. */
    currentPath: string;

    /** Optional path to the translated version of the current page. */
    translationPath?: string | undefined;
}

const { locale, currentPath, translationPath } = Astro.props as Props;
---

<header
    class="relative z-50 border-b border-border-default bg-page-bg dark:border-border-default-dark dark:bg-page-bg-dark"
>
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="flex h-16 items-center justify-between sm:h-20">
            <!-- Logo -->
            <div class="shrink-0">
                <a
                    href={getRoute('home', locale)}
                    class="text-sm font-medium uppercase tracking-wider text-text-primary transition-colors hover:text-text-secondary sm:text-base dark:text-text-primary-dark dark:hover:text-text-secondary-dark"
                >
                    Ambilab
                </a>
            </div>

            <!-- Desktop Navigation with Controls -->
            <nav class="hidden items-center gap-6 md:flex lg:gap-8">
                <HeaderNav locale={locale} currentPath={currentPath} mobile={false} />

                <div
                    class="flex items-center gap-2 border-l border-border-default pl-6 lg:pl-8 dark:border-border-default-dark"
                >
                    <ThemeSwitcher client:load />
                    <LocaleSwitcher client:load currentLocale={locale} translationPath={translationPath} />
                </div>
            </nav>

            <!-- Mobile Menu -->
            <MobileMenu client:load>
                <div class="flex flex-col gap-6">
                    <HeaderNav locale={locale} currentPath={currentPath} mobile={true} />

                    <div
                        class="flex items-center gap-2 border-t border-border-default pt-6 dark:border-border-default-dark"
                    >
                        <ThemeSwitcher client:load />
                        <LocaleSwitcher client:load currentLocale={locale} translationPath={translationPath} />
                    </div>
                </div>
            </MobileMenu>
        </div>
    </div>
</header>
