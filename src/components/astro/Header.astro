---
/**
 * Header Component
 *
 * Site header with logo, navigation menu, theme switcher, and locale switcher.
 *
 * Sticky header that remains visible while scrolling.
 *
 * Includes responsive layout and accessibility features.
 *
 * Features:
 * - Sticky positioning at the top of the page
 * - Skip to main content link for keyboard navigation
 * - Logo/brand link with accessible label
 * - Mobile hamburger menu with slide-down navigation
 * - Desktop horizontal navigation with landmark label
 * - Theme switcher (light/dark mode)
 * - Locale switcher (English/Czech)
 * - Active navigation highlighting
 * - Translation path support for locale switching
 *
 * Accessibility:
 * - Skip navigation link for keyboard users
 * - Proper ARIA labels for navigation landmarks
 * - Accessible logo link without redundant text
 *
 * @component
 * @example
 * ```astro
 * <Header
 *   locale="en"
 *   currentPath="/blog"
 *   translationPath="/cs/blog"
 * />
 * ```
 */
import HeaderNav from '@components/astro/HeaderNav.astro';
import LocaleSwitcher from '@components/svelte/LocaleSwitcher.svelte';
import MobileMenu from '@components/svelte/MobileMenu.svelte';
import ThemeSwitcher from '@components/svelte/ThemeSwitcher.svelte';
import { getRoute } from '@config/routes';
import type { Locale } from '@type/locale';

/**
 * Props for the Header component.
 */
export interface Props {
    /** The locale for the header navigation and translations. */
    locale: Locale;

    /** The current page path used to highlight the active navigation item. */
    currentPath: string;

    /** Optional path to the translated version of the current page. */
    translationPath?: string | undefined;
}

const { locale, currentPath, translationPath } = Astro.props as Props;
---

<header
    class="sticky top-0 z-50 border-b border-border-default bg-page-bg transition-colors dark:border-border-default-dark dark:bg-page-bg-dark"
>
    <!-- Skip to main content link -->
    <a
        href="#main-content"
        class="focus:ring-link-default dark:focus:ring-link-default-dark sr-only focus:not-sr-only focus:absolute focus:left-4 focus:top-4 focus:z-50 focus:rounded focus:bg-surface focus:px-4 focus:py-2 focus:text-text-primary focus:outline-none focus:ring-2 dark:focus:bg-surface-dark dark:focus:text-text-primary-dark"
    >
        Skip to main content
    </a>

    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="flex h-16 items-center justify-between sm:h-20">
            <div class="flex items-center gap-6 md:flex lg:gap-8">
                <!-- Logo -->
                <div class="shrink-0">
                    <a
                        href={getRoute('home', locale)}
                        class="block transition-all duration-200"
                        aria-label="Ambilab Home"
                    >
                        <svg width="78" height="24" viewBox="0 0 52 16" xmlns="http://www.w3.org/2000/svg">
                            <path
                                d="M52,0 L52,16 L0,16 L0,0 L52,0 Z"
                                class={isHomePage
                                    ? 'fill-text-primary dark:fill-text-primary-dark'
                                    : 'fill-transparent'}></path>
                            <path
                                d="M17,4 L11,4 L11,12 L13,12 L13,6.00120245 L14,6.00120245 L14,12 L16,12 L16,6 L17,6 L17,12 L18.5827497,12.0009516 C18.6315999,12.000981 18.6776006,12.0010086 18.7199376,12.0010341 L19.0000126,12.0012024 L19.0000126,6 L18,6 L18,5 L17,5 L17,4 Z M10,4 L6,4 L6,5 L5,5 L5,6 L4,6 L4,12 L6,12 L6,10 L8,10.0012024 L8,12 L10,12 L10,4 Z M25,4 L20,4 L20,12 L25,12 L25,11 L26,11 L26,8 L25,8 L25,7 L26,7 L26,5 L25,5 L25,4 Z M29,4 L27,4 L27,12 L29,12 L29,4 Z M32,4 L30,4 L30,12 L37,12 L37,10 L39,10 L39,12 L41,12 L41,4 L37,4 L37,5 L36,5 L36,6 L35,6 L35,10 L32,10 L32,4 Z M47,4 L42,4 L42,12 L47,12 L47,11 L48,11 L48,8 L47,8 L47,7 L48,7 L48,5 L47,5 L47,4 Z M24,9 L24,10 L22,10 L22,9 L24,9 Z M46,9 L46,10 L44,10 L44,9 L46,9 Z M8,6 L8,8 L6,8 L6,7 L7,7 L7,6 L8,6 Z M39,6 L39,8 L37,8 L37,7 L38,7 L38,6 L39,6 Z M24,6 L24,7 L22,7 L22,6 L24,6 Z M46,6 L46,7 L44,7 L44,6 L46,6 Z"
                                fill-rule="evenodd"
                                class={isHomePage
                                    ? 'fill-page-bg dark:fill-page-bg-dark'
                                    : 'fill-text-primary dark:fill-text-primary-dark'}></path>
                        </svg>
                    </a>
                </div>

                <!-- Desktop Navigation with Controls -->
                <nav aria-label="Main navigation" class="hidden items-center gap-6 md:flex lg:gap-8">
                    <HeaderNav locale={locale} currentPath={currentPath} mobile={false} />
                </nav>
            </div>

            <div class="hidden items-center gap-2 md:flex">
                <ThemeSwitcher client:load />
                <LocaleSwitcher client:load currentLocale={locale} translationPath={translationPath} />
            </div>

            <!-- Mobile Menu -->
            <div class="md:hidden">
                <MobileMenu client:load>
                    <div class="flex flex-col gap-6">
                        <HeaderNav locale={locale} currentPath={currentPath} mobile={true} />

                        <div
                            class="flex items-center gap-2 border-t border-border-default pt-6 dark:border-border-default-dark"
                        >
                            <ThemeSwitcher client:load />
                            <LocaleSwitcher client:load currentLocale={locale} translationPath={translationPath} />
                        </div>
                    </div>
                </MobileMenu>
            </div>
        </div>
    </div>
</header>
