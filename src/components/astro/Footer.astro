---
import SocialLinks from '@components/svelte/SocialLinks.svelte';
import type { Locale } from '@type/locale';
import { getTranslation } from '@i18n/translations';

export interface Props {
  locale: Locale;
}

const { locale } = Astro.props;
const t = getTranslation(locale);
const currentYear = new Date().getFullYear();
---

<footer class="border-t border-gray-200 bg-gray-50 dark:border-gray-800 dark:bg-gray-950">
  <div class="container mx-auto px-4 py-12">
    <div class="grid gap-8 md:grid-cols-3">
      <!-- Brand -->
      <div>
        <h3 class="mb-4 text-lg font-bold">Ambilab</h3>
        <p class="text-sm text-gray-600 dark:text-gray-400">
          {t.footer.description}
        </p>
      </div>

      <!-- Links -->
      <div>
        <h4 class="mb-4 text-sm font-semibold tracking-wider uppercase">
          {t.footer.navigation}
        </h4>
        <ul class="space-y-2 text-sm">
          <li>
            <a
              href="/"
              class="text-gray-600 transition-colors hover:text-blue-600 dark:text-gray-400"
            >
              {t.nav.home}
            </a>
          </li>
          <li>
            <a
              href={locale === 'en' ? '/about' : '/o-projektu'}
              class="text-gray-600 transition-colors hover:text-blue-600 dark:text-gray-400"
            >
              {t.nav.about}
            </a>
          </li>
          <li>
            <a
              href="/blog"
              class="text-gray-600 transition-colors hover:text-blue-600 dark:text-gray-400"
            >
              {t.nav.blog}
            </a>
          </li>
          <li>
            <a
              href={`/${locale}/rss.xml`}
              class="text-gray-600 transition-colors hover:text-blue-600 dark:text-gray-400"
            >
              RSS Feed
            </a>
          </li>
        </ul>
      </div>

      <!-- Social -->
      <div>
        <h4 class="mb-4 text-sm font-semibold tracking-wider uppercase">Follow Us</h4>
        <SocialLinks />
      </div>
    </div>

    <div
      class="mt-8 border-t border-gray-200 pt-8 text-center text-sm text-gray-600 dark:border-gray-800 dark:text-gray-400"
    >
      {t.footer.copyright} Â© {currentYear} Ambilab. {t.footer.allRightsReserved}.
    </div>
  </div>
</footer>
