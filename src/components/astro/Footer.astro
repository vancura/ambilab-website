---
/**
 * Footer Component
 *
 * Site footer with brand information, navigation links,
 * social media links, and copyright notice.
 *
 * Displays in a responsive grid layout.
 *
 * Features:
 * - Brand description
 * - Navigation links (home, about, blog, RSS)
 * - Social media links via SocialLinks component
 * - Copyright notice with current year
 * - Locale-aware content and routes
 * - Responsive grid layout
 *
 * @component
 * @example
 * ```astro
 * <Footer locale="en" />
 * ```
 */
import SocialLinks from '@components/astro/SocialLinks.astro';
import { getRoute } from '@config/routes';
import { getTranslation } from '@i18n/translations';
import type { Locale } from '@type/locale';

/**
 * Props for the Footer component.
 */
export interface Props {
    /** The locale for the footer content and translations. */
    locale: Locale;
}

const { locale } = Astro.props as Props;
const t = getTranslation(locale);
const currentYear = new Date().getFullYear();
---

<footer
    class="border-t border-border-default bg-page-bg-muted dark:border-border-default-dark dark:bg-page-bg-muted-dark"
>
    <div class="container mx-auto px-4 py-12">
        <div class="grid gap-8 md:grid-cols-3">
            <!-- Brand -->
            <div>
                <h3 class="mb-4 text-lg font-bold">Ambilab</h3>
                <p class="text-sm text-text-muted dark:text-text-muted-dark">
                    {t.footer.description}
                </p>
            </div>

            <!-- Links -->
            <div>
                <h4 class="mb-4 text-sm font-semibold uppercase tracking-wider">
                    {t.footer.navigation}
                </h4>
                <ul class="space-y-2 text-sm">
                    <li>
                        <a
                            href={getRoute('home', locale)}
                            class="text-text-muted transition-colors hover:text-link-hover dark:text-text-muted-dark dark:hover:text-link-hover-dark"
                        >
                            {t.nav.home}
                        </a>
                    </li>
                    <li>
                        <a
                            href={getRoute('about', locale)}
                            class="text-text-muted transition-colors hover:text-link-hover dark:text-text-muted-dark dark:hover:text-link-hover-dark"
                        >
                            {t.nav.about}
                        </a>
                    </li>
                    <li>
                        <a
                            href={getRoute('blog', locale)}
                            class="text-text-muted transition-colors hover:text-link-hover dark:text-text-muted-dark dark:hover:text-link-hover-dark"
                        >
                            {t.nav.blog}
                        </a>
                    </li>
                    <li>
                        <a
                            href={getRoute('rss', locale)}
                            class="text-text-muted transition-colors hover:text-link-hover dark:text-text-muted-dark dark:hover:text-link-hover-dark"
                        >
                            RSS Feed
                        </a>
                    </li>
                </ul>
            </div>

            <!-- Social -->
            <div>
                <h4 class="mb-4 text-sm font-semibold uppercase tracking-wider">Follow Ambilab</h4>

                <SocialLinks />
            </div>
        </div>

        <div
            class="mt-8 border-t border-border-default pt-8 text-center text-sm text-text-muted dark:border-border-default-dark dark:text-text-muted-dark"
        >
            {t.footer.copyright} Â© {currentYear} Ambilab. {t.footer.allRightsReserved}.
        </div>
    </div>
</footer>
