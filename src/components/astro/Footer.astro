---
import SocialLinks from '@components/astro/SocialLinks.astro';
import { getRoute } from '@config/routes';
import { getTranslation } from '@i18n/translations';
import type { Locale } from '@type/locale';

export interface Props {
    locale: Locale;
}

const { locale } = Astro.props as Props;
const t = getTranslation(locale);
const currentYear = new Date().getFullYear();
---

<footer
    class="border-border-default bg-page-bg-muted dark:border-border-default-dark dark:bg-page-bg-muted-dark border-t"
>
    <div class="container mx-auto px-4 py-12">
        <div class="grid gap-8 md:grid-cols-3">
            <!-- Brand -->
            <div>
                <h3 class="mb-4 text-lg font-bold">Ambilab</h3>
                <p class="text-text-muted dark:text-text-muted-dark text-sm">
                    {t.footer.description}
                </p>
            </div>

            <!-- Links -->
            <div>
                <h4 class="mb-4 text-sm font-semibold uppercase tracking-wider">
                    {t.footer.navigation}
                </h4>
                <ul class="space-y-2 text-sm">
                    <li>
                        <a
                            href={getRoute('home', locale)}
                            class="text-text-muted hover:text-link-hover dark:text-text-muted-dark transition-colors"
                        >
                            {t.nav.home}
                        </a>
                    </li>
                    <li>
                        <a
                            href={getRoute('about', locale)}
                            class="text-text-muted hover:text-link-hover dark:text-text-muted-dark transition-colors"
                        >
                            {t.nav.about}
                        </a>
                    </li>
                    <li>
                        <a
                            href={getRoute('blog', locale)}
                            class="text-text-muted hover:text-link-hover dark:text-text-muted-dark transition-colors"
                        >
                            {t.nav.blog}
                        </a>
                    </li>
                    <li>
                        <a
                            href={`/${locale}/rss.xml`}
                            class="text-text-muted hover:text-link-hover dark:text-text-muted-dark transition-colors"
                        >
                            RSS Feed
                        </a>
                    </li>
                </ul>
            </div>

            <!-- Social -->
            <div>
                <h4 class="mb-4 text-sm font-semibold uppercase tracking-wider">Follow Ambilab</h4>

                <SocialLinks />
            </div>
        </div>

        <div
            class="border-border-default text-text-muted dark:border-border-default-dark dark:text-text-muted-dark mt-8 border-t pt-8 text-center text-sm"
        >
            {t.footer.copyright} Â© {currentYear} Ambilab. {t.footer.allRightsReserved}.
        </div>
    </div>
</footer>
