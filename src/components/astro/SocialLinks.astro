---
/**
 * SocialLinks Component
 *
 * Displays social media links as a grid of icon buttons.
 *
 * Links open in new tabs with proper security attributes (noopener, noreferrer).
 *
 * Icons are rendered using the Icon component with proper accessibility labels.
 *
 * Features:
 * - Icon-based social media links
 * - Opens links in new tabs securely
 * - Hover effects and transitions
 * - Accessible labels for each link
 * - Responsive flex layout
 * - Dark mode support
 *
 * Social Platforms:
 * - X
 * - Threads
 * - Instagram
 * - LinkedIn
 * - Mastodon
 * - Bluesky
 * - GitHub
 *
 * @component
 * @example
 * ```astro
 * <SocialLinks />
 * ```
 */
import type { IconName } from '@config/icons';
import { SITE } from '@config/site';

import Icon from './Icon.astro';

/**
 * Configuration for a single social media link.
 */
interface SocialLink {
    /** Display the name of the social platform. */
    name: string;

    /** URL to the social media profile. */
    url: string;

    /** Icon name to display (must exist in ICON_MAP). */
    icon: IconName;
}

const socialLinks: SocialLink[] = [
    { name: 'X', url: SITE.SOCIAL.X, icon: 'x' },
    { name: 'Threads', url: SITE.SOCIAL.THREADS, icon: 'threads' },
    { name: 'Instagram', url: SITE.SOCIAL.INSTAGRAM, icon: 'instagram' },
    { name: 'LinkedIn', url: SITE.SOCIAL.LINKEDIN, icon: 'linkedin' },
    { name: 'Mastodon', url: SITE.SOCIAL.MASTODON, icon: 'mastodon' },
    { name: 'Bluesky', url: SITE.SOCIAL.BLUESKY, icon: 'bluesky' },
    { name: 'GitHub', url: SITE.SOCIAL.GITHUB, icon: 'github' },
];
---

<div class="flex flex-wrap gap-3">
    {
        socialLinks.map((link) => (
            <a
                href={link.url}
                target="_blank"
                rel="noopener noreferrer"
                class="flex h-9 w-9 items-center justify-center rounded-lg border border-border-default hover:bg-surface-hover dark:border-border-default-dark dark:hover:bg-surface-hover-dark"
                aria-label={link.name}
                title={link.name}
            >
                <Icon name={link.icon} class="h-5 w-5" ariaLabel={link.name} decorative={false} />
            </a>
        ))
    }
</div>
