---
/**
 * 503 Service Unavailable Error Page
 *
 * Displays a user-friendly 503 error page when
 * the service is temporarily unavailable.
 *
 * Uses locale-aware translations and provides
 * a link back to the home page.
 */
import ErrorPage from '@components/astro/ErrorPage.astro';
import { DEFAULT_LOCALE } from '@i18n/config';
import { getTranslation } from '@i18n/translations';
import { getLocalizedPath } from '@i18n/utils';

// Get the detected locale from middleware (via context.locals)
// Use DEFAULT_LOCALE as fallback if middleware didn't set it
const detectedLocale = Astro.locals.locale ?? DEFAULT_LOCALE;
const t = getTranslation(detectedLocale);

const homePath = getLocalizedPath('', detectedLocale);
---

<ErrorPage
    code={503}
    title={t.serviceUnavailable.title}
    description={t.serviceUnavailable.description}
    homeButtonText={t.serviceUnavailable.goHome}
    homeLink={homePath}
    locale={detectedLocale}
/>
