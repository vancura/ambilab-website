{
  // Disables JSON output to prevent permission errors in CI environments.
  "outputFormatters": [],
  "config": {
    "default": true,

    // Allow HTML in markdown files (needed for MDX).
    "MD033": false,
    "no-inline-html": false,

    // Allow long lines (for links and code).
    "MD013": false,

    "line-length": false
  },

  "globs": ["**/*.md", "**/*.mdx"],

  "ignores": ["**/node_modules/**", "**/dist/**", "**/.astro/**", "**/pnpm-lock.yaml"]
}
